extends ../layout/main

block variables
  - var title = 'Tosol Sintez 2022';
  - var description = 'Description';
  - var pageClass = 'page--index';

block content
  include ../includes/modules/preloader
  include ../includes/modules/overlay-rotate
  canvas.webgl
  .customizer__fullscreen.hidden(data-tippy-content="Развернуть на полный экран")
    +svg({name: 'fullscreen'}).customizer__fullscreen-expand
    +svg({name: 'fullscreen-collapse'}).customizer__fullscreen-collapse
  .customizer
    .customizer__control-buttons
      .customizer__control-button(data-bar="locations", data-tippy-content="Выбрать окружение")
        img(src="/assets/images/previews/customizer-location.jpg", alt="")
      .customizer__control-button(data-bar="cars", data-tippy-content="Выбрать автомобиль")
        img(src="/assets/images/previews/customizer-car.jpg", alt="")
      .customizer__control-button(data-bar="sprite-girls", data-tippy-content="Выбрать модель")
        img(src="/assets/images/previews/customizer-girl.jpg", alt="")
      //- .customizer__button.customizer__button--girls(data-bar="girls", data-tippy-content="Девушка") Девушка 3D

    .customizer__control-bars

      .customizer__control-bar.customizer__control-bar--cars
        .customizer__control-bar-wrap
          +control-bar-close()
          .customizer__control-bar-items.customizer__cars
            //- .customizer__control-item.customizer__cars-item(data-car="hummer") Hummer

      //- .customizer__control-bar.customizer__control-bar--girls
      //-   .customizer__control-bar-wrap
      //-     +control-bar-close()
      //-     .customizer__control-bar-items.customizer__girls
            //- .customizer__control-item.customizer__girls-item(data-girl="girl1") Girl 1

      .customizer__control-bar.customizer__control-bar--sprite-girls
        .customizer__control-bar-wrap
          +control-bar-close()
          .customizer__control-bar-items.customizer__sprite-girls
            //- .customizer__control-item.customizer__sprite-girls-item(data-sprite-girl="girl1") Girl 1

      .customizer__control-bar.customizer__control-bar--locations
        .customizer__control-bar-wrap
          +control-bar-close()
          .customizer__control-items.customizer__locations
            //- .customizer__control-item.customizer__locations-item(data-location="scene1") Location 1

  .customizer-bottom 

    .customizer-bottom__center
      .customizer__generate-button(data-tippy-content="Сгенерировать")
        img(src="/assets/images/customizer-generate-button.png", alt="", )
      .customizer__control-colors-wrap
        .customizer__control-colors.customizer__car-colors
          .customizer__control-colors-title Цвета

        .customizer__control-girls-params-wrap
          .customizer__control-girls-params-button.button(data-tippy-content="Выбрать позу и одежду")
            img(src="/assets/images/previews/customizer-girl.jpg", alt="")
            +svg({name: 'gear'})
          .customizer__control-girls-params-bar
            
    .customizer-bottom__right
      .customizer__download-button.button.button--round(data-micromodal-open="modal-wallpaper")
        span.button__content Скачать
        span.button__icon 
          +svg({name:'download'})
      .customizer__share-button.button.button--round(data-micromodal-open="modal-share")
        span.button__content Поделиться
        span.button__icon 
          +svg({name:'share'})
      .customizer__gift.button.button--round.button--gift(data-micromodal-open="modal-gift")
        span.button__content Получить подарок
        span.button__icon 
          img(src="/assets/images/gift.png", alt="")
      //- .customizer__sent.button.button--round.button--gift(data-micromodal-open="modal-sent")
      //-   span.button__content Отправлено
      //-   span.button__icon 
      //-     img(src="/assets/images/gift.png", alt="")
    
  